@page "/ItemCart"
@inherits ItemCartBase


@if (itemCarts == null && ErrorMessage == null)
{
    <h3>Loading Item in your Cart.....</h3>
}
else if (ErrorMessage != null)
{
    <h3 class="text-danger">@ErrorMessage</h3>
}
else
{
    <h3 class="mb-5">Your Cart Item</h3>
    @if (itemCarts.Count() > 0)
    {
        <div class="row mb-5">
            <div class="col-md-9">
                @foreach (var item in itemCarts)
                {
                    <div class="row mb-4">
                        <div class="col-md-4">
                            <img src="@item.ImageURL" width="300" class="img-thumbnail">
                        </div>
                        <div class="col-md-8">
                            <h5>@item.ProductName</h5>
                            <div class="mb-4">@item.Description</div>
                            <span>
                                Price: <b>@item.Price.ToString("C")</b>
                               
                            </span>
                        </div>
                           
                    </div>
                }
            </div>
           
        </div>
    }
   
}